{
  "name": "endpoint-agent",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "npm run build.webcomponents && vue-cli-service serve --inline-vue",
    "build": "vue-cli-service build --inline-vue && npm run build.webcomponents",
    "lint": "vue-cli-service lint",
    "clean": "rimraf ./dist ./public/*.umd.js",
    "build.webcomponents": "vue-cli-service build --filename endpointAgent --dest ./public --mode development --target lib --formats umd --inline-vue --no-clean ./src/main.js && rm ./public/demo.html"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.0",
    "@vue/cli-service": "^4.2.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "rimraf": "^3.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
